<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/rowHighlighted"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="350dp"
		android:layout_marginHorizontal="12dp"
		android:layout_marginTop="16dp"
		android:orientation="vertical"
		android:padding="12dp">

		<!--	text description start-->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="2"
				android:textColor="@color/dark_color"
				android:textSize="14sp"
				android:textStyle="bold"
				tools:text="Making the most of Outdoor space for Bountiful an beautiful vegetable Garden." />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp">

				<TextView
					android:id="@+id/author"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="12dp"
					android:textColor="@color/orange_color"
					android:textSize="12sp"
					tools:text="author" />

				<TextView
					android:id="@+id/publishedAt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/dark_color"
					android:textSize="12sp"
					tools:text="Published at" />
			</LinearLayout>

		</LinearLayout>
		<!--	text description start-->

		<!--	image highlighted start-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_marginTop="12dp">

			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/image1"
				android:layout_width="150dp"
				android:layout_height="220dp"
				android:layout_marginEnd="12dp"
				android:scaleType="centerCrop"
				android:src="@drawable/poster_4"
				app:shapeAppearanceOverlay="@style/Circular" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/image2"
					android:layout_width="150dp"
					android:layout_height="100dp"
					android:scaleType="centerCrop"
					android:src="@drawable/poster_4"
					app:shapeAppearanceOverlay="@style/Circular" />

				<com.google.android.material.imageview.ShapeableImageView
					android:id="@+id/image3"
					android:layout_width="150dp"
					android:layout_height="100dp"
					android:layout_marginTop="20dp"
					android:scaleType="centerCrop"
					android:src="@drawable/poster_4"
					app:shapeAppearanceOverlay="@style/Circular" />
			</LinearLayout>

		</LinearLayout>
		<!--	image highlighted start-->

		<Space
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginEnd="4dp"
					android:padding="4dp"
					android:src="@drawable/favorite_icon"
					app:tint="@color/orange_color" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/dark_color"
					android:textSize="12sp"
					tools:text="2.3 K" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginEnd="4dp"
					android:padding="4dp"
					android:src="@drawable/message_icon"
					app:tint="@color/orange_color" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/dark_color"
					android:textSize="12sp"
					tools:text="21 K" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginEnd="4dp"
					android:padding="4dp"
					android:src="@drawable/share_icon"
					app:tint="@color/orange_color" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/dark_color"
					android:textSize="12sp"
					tools:text="1.0 K" />
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>